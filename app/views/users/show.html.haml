%section
	.container
		.row
			.col-lg-12
				=render :partial => "user_info", :locals => {:user => @user}
				.clearfix
				%hr
				-if current_user
					- unless current_user==(@user)
						#follow_form.margin-bottom.pull-right
							- if current_user.following?(@user)
								= form_for(current_user.relationships.find_by_followed_id(@user), |
	                html: { method: :delete }) do |f|                                |
									= f.submit "Following", class: "btn"
							- else
								= form_for(current_user.relationships.build(followed_id: @user.id)) do |f|
									%div= f.hidden_field :followed_id

									= f.submit "+ Follow", class: "btn btn-primary"
		.row
			.col-sm-12
				.panel
					.panel-body
						.padded
							.page-header.no-margin-top
								%h4.no-margin-bottom
									=@user.first_name.possessive
									Recent Activity
							-if @check_ins.count > 0
								-@check_ins.each do |c|
									=render partial: 'check_ins/post', locals:{:check_in => c}
									%hr
							-else
								%p.text-muted
									No Activity to show
