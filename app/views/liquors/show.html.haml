%section
	.container
		.row
			.col-sm-12
				.row
					.col-sm-9
						.panel.margin-bottom
							.panel-body
								.margin-bottom
									=render partial: 'liquor_thumb_medium', locals:{:liquor => @liquor}
								%a.btn.btn-primary{"data-toggle"=>"modal", :href=>"#checkInModal", :rel=>"tooltip", "data-original-title"=>"Check-in this scotch", "data-placement"=>"bottom"}
									%i.fa.fa-plus{:style=>"font-size:2em;"}


					.col-sm-3
						.margin-bottom
							=render partial: 'show_actions', locals:{:liquor => @liquor}
				.row
					.col-sm-9
						.panel
							.panel-body
								.page-header.no-margin-top
									%p.no-margin-bottom
										%strong
											Global Recent Activity
								-if @check_ins.count > 0
									-@check_ins.each do |c|
										=render partial: 'check_ins/post', locals:{:check_in => c}
										%hr
								-else
									%p.text-muted
										No activity to show

					.col-sm-3

#checkInModal.modal.fade{"aria-hidden" => "true", role: "dialog"}
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
				%h4.no-margin-bottom.modal-title.light-font-name
					Check-In
			.modal-body
				=render partial: 'check_ins/check_in_form'
