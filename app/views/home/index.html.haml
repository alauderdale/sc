:css
	.alert{
		margin-bottom:0;
	}

%section.invert{style:"background-color:black;"}
	.container
		.row
			.col-lg-12
				.double-padding-bottom
					%h5.bold-font-name{:style=>"color:rgba(255,255,255,.5)!important;"}
						About
					%h1.bold-font-name
						Scotch Club
%section
	.container
		.row
			.col-lg-12
				.panel{:style=>"margin-top:-90px;"}
					.panel-body
						.padded
							%h3
								It's a club...
							%p
								A club to learn about scotch, enjoy good company, smoke cigars, sit on rooftops, train ravens, discuss intelegent topics & change the world one glass of scotch at a time.

		.row
			.col-lg-12
				.page-header.no-margin-top
					%p.no-margin-bottom
						Members
				-@users.each do |user|
					.panel
						.panel-body
							=render :partial => "users/user_thumb", :locals => {:user => user}
