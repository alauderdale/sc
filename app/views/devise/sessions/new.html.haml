%section
  .container
    = devise_error_messages!
    .col-sm-2
    .col-sm-8
      .text-center
        %h3.light-font-name.no-margin-bottom
          Welcome back to scotch club
        %p.text-muted
          %small
            Log in below
      .panel
        .panel-body
          .authform
            = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f|
              .form-group
                - if devise_mapping.registerable?
                  = link_to 'Sign up Instead', new_registration_path(resource_name), class: 'right'
                = f.label :email
                = f.email_field :email, :autofocus => true, class: 'form-control'
              .form-group
                - if devise_mapping.recoverable?
                  = link_to "Forgot password?", new_password_path(resource_name), class: 'right'
                = f.label :password
                = f.password_field :password, class: 'form-control'
              = f.submit 'Log in', :class => 'btn btn-primary right'
              - if devise_mapping.rememberable?
                .checkbox
                  = f.check_box :remember_me
                  = f.label :remember_me
    .col-sm-2