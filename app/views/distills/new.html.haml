%section
	.container
		.row
			.col-lg-12
				%h1.text-center
					New Distillery
		.row
			.col-sm-3
			.col-sm-6
				.panel
					.panel-body
						.padded
							= form_for(:distill, :url => {:action => 'create'}, :html => { :multipart => true }) do |f| 
								= render(:partial => 'form', :locals => {:f => f})
								.form-buttons
									= submit_tag("Create", :class=>"btn btn-primary") 
			.col-sm-3