%section
	.container
		.row
			.col-sm-3
			.col-sm-6
				.panel
					.panel-body
						.padded
							%h5.serif-font-name.page-header.text-muted.no-margin-top
								Edit Note
							= form_for(:check_in, :url => {:action => 'update_check_in', :id=> @check_in.id}, :html => { :multipart => true }) do |f| 
								= render(:partial => 'form', :locals => {:f => f})
								.form-buttons
									= submit_tag("Update", :class=>"btn btn-primary btn-huge btn-block") 
			.col-sm-3